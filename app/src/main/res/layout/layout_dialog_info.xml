<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#00ffffff">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/details_card_view"
        card_view:cardBackgroundColor="#ffffff"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        card_view:cardElevation="6dp"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/course_code"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                android:textColor="#727272"
                android:text="COP290"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/course_name"
                android:layout_below="@id/course_code"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:text="Design Practices in Computer Science"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/course_duration"
                android:layout_below="@id/course_name"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#727272"
                android:textSize="14sp"
                android:visibility="gone"
                android:text="Course duration : 01/01/2016 - 15/05/2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/course_instructor"
                android:visibility="gone"
                android:layout_below="@id/course_duration"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:textSize="14sp"
                android:textColor="#727272"
                android:text="Instructor : Vinay Ribero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/course_description"
                android:layout_below="@id/course_instructor"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:textSize="12sp"
                android:textColor="#727272"
                android:text="Design Practices in Computer Science.Some more detailsDesign Practices in Computer Science.Some more detailsDesign Practices in Computer Science.Some more detailsDesign Practices in Computer Science.Some more details\nDesign Practices in Computer Science.Some more details\nDesign Practices in Computer Science.Some more detailsDesign Practices in Computer Science.Some more details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/course_credits"
                android:layout_alignTop="@id/course_code"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="#727272"
                android:text="3 credits (0-0-6)"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
