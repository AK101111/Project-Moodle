<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e7e7e7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        card_view:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardElevation="2dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/course_code"
                android:visibility="gone"
                android:text="courseCode -"
                android:layout_marginRight="5dp"
                android:textColor="#363636"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/grade_name"
                android:layout_toRightOf="@id/course_code"
                android:text="grade name"
                android:textSize="12sp"
                android:textColor="#3e3e3e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/score"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/grade_name"
                android:text="Score : 15/20"
                android:textColor="#727272"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/weightage"
                android:layout_marginTop="10dp"
                android:layout_below="@id/grade_name"
                android:layout_toRightOf="@id/score"
                android:layout_marginLeft="30dp"
                android:textColor="#727272"
                android:text="Weightage : 10"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>